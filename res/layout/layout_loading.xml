<?xml version="1.0" encoding="utf-8"?>
<com.android.baseline.framework.ui.view.LoadingView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >

    <ProgressBar
        android:id="@+id/loading_progressBar"
        style="@android:style/Widget.ProgressBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tip_txt"
        android:paddingBottom="10dp" />

    <TextView
        android:id="@+id/tip_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textColor="#98a5ac"
        android:textSize="18sp" 
        android:gravity="center_vertical"
        android:drawablePadding="5dp"/>
</com.android.baseline.framework.ui.view.LoadingView>